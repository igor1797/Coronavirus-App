<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/stateNameOrDateText"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/catskillWhiteWithOpacity"
            android:padding="8dp"
            android:textColor="@color/cloudBurst"
            android:textSize="12sp"
            android:textStyle="bold"
            tool:text="Hrvatska" />

        <TextView
            android:id="@+id/numberOfConfirmedCases"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/catskillWhiteWithOpacity"
            android:padding="8dp"
            android:textColor="@color/cloudBurst"
            android:textSize="12sp"
            android:textStyle="bold"
            tool:text="150M" />

        <TextView
            android:id="@+id/numberOfActiveCases"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/catskillWhiteWithOpacity"
            android:padding="8dp"
            android:textColor="@color/cloudBurst"
            android:textSize="12sp"
            android:textStyle="bold"
            tool:text="150M" />

        <TextView
            android:id="@+id/numberOfRecoveredCases"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/catskillWhiteWithOpacity"
            android:padding="8dp"
            android:text="@string/rText"
            android:textColor="@color/cloudBurst"
            android:textSize="12sp"
            android:textStyle="bold"
            tool:text="150M" />

        <TextView
            android:id="@+id/numberOfDeceasedCases"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/catskillWhiteWithOpacity"
            android:padding="8dp"
            android:text="@string/dText"
            android:textColor="@color/cloudBurst"
            android:textSize="12sp"
            android:textStyle="bold"
            tool:text="150M" />

    </LinearLayout>
</layout>